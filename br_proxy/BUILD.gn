import("../dsoftbus.gni")
ohos_shared_library("proxychannelmanager") {
  include_dirs = [
    "common/include"
  ]
  sources = [
    "br_proxy_module.c",
    "common/src/softbus_napi_utils.c",
  ]
  sanitize = {
    cfi = true
    cfi_cross_dso = true
    debug = false
  }

  deps = [
    "$dsoftbus_dfx_path:softbus_dfx",
    "$dsoftbus_root_path/adapter:softbus_adapter",
    "$dsoftbus_root_path/core/common:softbus_utils",
    "$dsoftbus_root_path/sdk:softbus_client",
    "$dsoftbus_root_path/core/frame:softbus_server",
    "$dsoftbus_dfx_path/dumper/legacy:softbus_dfx_dump"
  ]

  external_deps = [
    "c_utils:utils",
    "bounds_checking_function:libsec_shared",
    "hilog:libhilog",
    "napi:ace_napi",
  ]

  relative_install_dir = "module/distributedsched"

  subsystem_name = "communication"
  part_name = "dsoftbus"
}

ohos_shared_library("br_proxy_adapter") {
  sanitize = {
    cfi = true
    cfi_cross_dso = true
    debug = false
  }
  sources = []
  if (is_standard_system) {
    sources += [
      "br_proxy_adapter.cpp",
    ]
    deps = [
      "$dsoftbus_dfx_path:softbus_dfx",
    ]
    external_deps = [
      "c_utils:utils",
      "ability_runtime:ability_connect_callback_stub",
      "ability_runtime:ability_manager",
      "bundle_framework:appexecfwk_base",
      "bundle_framework:appexecfwk_core",
      "ipc:ipc_single",
      "samgr:samgr_proxy",
    ]
  } else {
    sources += [ "br_proxy_adapter_virtual.cpp" ]
  }

  include_dirs = [
    "$dsoftbus_root_path/interfaces/kits/common",
  ]
  subsystem_name = "communication"
  part_name = "dsoftbus"
}

group("br_proxy") {
    deps = [
      ":proxychannelmanager",
      ":br_proxy_adapter",
    ]
}