import("//build/config/features.gni")
import("//build/ohos.gni")
import("//build/test.gni")
import("../../../../../dsoftbus.gni")
import("../../trans_channel/proxy_channel/proxy_channel_unittest.gni")

##############################fuzztest##########################################

ohos_fuzztest("SoftBusMessageOpenChannelMockFuzzTest") {
  module_out_path = dsoftbus_fuzz_out_path

  fuzz_config_file = "$dsoftbus_root_path/tests/core/transmission/fuzztest/softbusmessageopenchannelmock_fuzzer"

  include_dirs = [
    "unittest/common/",
    "$dsoftbus_core_path/transmission/trans_channel/common/src",
    "$dsoftbus_core_path/transmission/trans_channel/auth/include",
  ]

  cflags = [
    "-g",
    "-O0",
    "-Wno-unused-variable",
    "-fno-omit-frame-pointer",
  ]

  sources = [ "softbusmessageopenchannelmock_fuzzer.cpp" ]
  sources += [
    "$dsoftbus_root_path/tests/core/transmission/trans_channel/common/mock/softbus_message_open_channel_test/softbus_message_open_channel_test.cpp",
  ]

  deps = [
    "$dsoftbus_root_path/adapter:softbus_adapter",
    "$dsoftbus_root_path/core/common:softbus_utils",
    "$dsoftbus_root_path/core/frame:softbus_server",
  ]

  external_deps = [
    "cJSON:cjson",
    "c_utils:utils",
    "googletest:gmock_rtti",
    "googletest:gtest_rtti",
    "hilog:libhilog",
  ]

  if (!is_standard_system) {
    external_deps += [ "hilog_lite:hilog_lite" ]
  }
}

group("fuzztest") {
  testonly = true
  deps = [
    # deps file
    ":SoftBusMessageOpenChannelMockFuzzTest",
  ]
}
