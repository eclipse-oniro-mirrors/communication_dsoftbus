ohos_fuzztest("TransProxyProcessDataMockFuzzTest") {
  module_out_path = dsoftbus_fuzz_out_path

  fuzz_config_file = "$dsoftbus_root_path/tests/core/transmission/fuzztest/transproxyprocessdatamock_fuzzer"

  include_dirs = [
    "$softbus_adapter_common/include",
    "$dsoftbus_dfx_path/interface/include",
    "$dsoftbus_dfx_path/interface/include/form",
    "$dsoftbus_root_path/core/transmission/trans_channel/common/include",
    "$dsoftbus_root_path/core/transmission/trans_channel/common/src",
    "$dsoftbus_root_path/core/transmission/trans_channel/manager/include",
    "$dsoftbus_root_path/core/transmission/ipc/include",
    "$dsoftbus_root_path/core/bus_center/lnn/lane_hub/lane_manager/include",
    "$dsoftbus_root_path/core/transmission/session/include",
    "$dsoftbus_root_path/core/transmission/trans_channel/tcp_direct/include",
    "$dsoftbus_root_path/tests/core/transmission/trans_channel/common/mock",
    "$dsoftbus_root_path/core/common/security/permission/include/",
  ]

  cflags = [
    "-g",
    "-O0",
    "-Wno-unused-variable",
    "-fno-omit-frame-pointer",
  ]

  sources = [ "transproxyprocessdatamock_fuzzer.cpp" ]
  sources += [
    "$dsoftbus_root_path/tests/core/transmission/trans_channel/common/mock/trans_inner_test_mock.cpp",
    "$dsoftbus_root_path/tests/core/transmission/trans_channel/common/trans_inner_test.cpp",
  ]

  deps = [
    "$dsoftbus_root_path/adapter:softbus_adapter",
    "$dsoftbus_root_path/core/common:softbus_utils",
    "$dsoftbus_root_path/core/frame:softbus_server",
  ]

  external_deps = [
    "c_utils:utils",
    "dsoftbus:softbus_client",
    "googletest:gmock_rtti",
    "googletest:gtest_rtti",
    "hilog:libhilog",
  ]
}

group("fuzztest") {
  testonly = true
  deps = [
    # deps file
    ":TransProxyProcessDataMockFuzzTest",
  ]
}
